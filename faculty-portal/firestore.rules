rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isAdmin() { return request.auth.token.admin == true; }

    match /terms/{termId} {
      allow read: if true; // عامة
      allow write: if isAdmin();
    }

    match /departments/{deptId} { allow read: if true; allow write: if isAdmin(); }
    match /branches/{branchId} { allow read: if true; allow write: if isAdmin(); }

    match /faculty/{uid} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /activities/{id} { allow read: if true; allow write: if isAdmin(); }
    match /publications/{id} { allow read: if true; allow write: if isAdmin(); }
    match /courses/{id} { allow read: if true; allow write: if isAdmin(); }

    match /activity_log/{id} { allow read: if isSignedIn(); allow write: if isAdmin(); }
  }
}
